<tr>
  <td>
    <h4><%= sale.name %></h4>
  </td>
  <td>
    <%= sale.starts_on %>
  </td>
  <td>
    <%= sale.ends_on %>
  </td>
  <td>
    <% if sale.finished?%>
      <span class="label label-danger">Finished</span>
    <% elsif sale.upcoming?%>
      <span class="label label-warning">Upcoming</span>
    <% elsif sale.active? %>
      <span class="label label-success">Active</span>
    <% end %>
  </td>
  <td>
    <%= sale.percent_off %>
  </td>
  <td>
    <%= link_to fa_icon('trash'), [:admin, sale], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
  </td>
</tr>